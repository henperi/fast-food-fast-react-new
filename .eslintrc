{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },

  "extends": "airbnb",

  "parser": "babel-eslint",

  "rules": {
    "no-console": "off",
    "linebreak-style": "off",
    "jsx-a11y/label-has-associated-control": [
      2,
      {
        "labelComponents": ["CustomLabel"],
        "labelAttributes": ["inputLabel"],
        "controlComponents": ["CustomInput"],
        "depth": 3
      }
    ]
  }
}
